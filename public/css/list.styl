$color-gray3 = #333
$color-gray6 = #666
$color-gray9 = #999
$color-graye = #eee
$color-grayc = #ccc
$color-white = #fff
$color-orange = orange

.comment-list
  padding: 0
  list-style: none
  .comment-item
    color: $color-gray9
    margin: 10px
    padding: 5px 10px
    background-color: $color-white
    box-sizing: border-box
    .content
      position: relative
      margin-bottom: 5px
    .user-submit
      position: relative
      width: 100%
      font-size: 12px
      color: $color-grayc
      .rate
        max-width: 80%
        float: left
        text-align: left
        .rsts
          list-style: none
          padding: 0
          .rst
            display: inline
            span
              padding-right: 5px
      .reveal
        max-width: 20%
        float: right
        text-align: right
        line-height: 30px
        .avatar
          width: 30px
          height: 30px
          border-radius: 50%
          vertical-align: middle
    .tags
      position: absolute
      right: 2px
      top: 0
      width: 15px
      .tag
        position: relative
        width: 15px
        height: 15px
        color: $color-white
        background-color: $color-orange
        padding: 2px
        box-sizing: content-box
        font-size: 12px
