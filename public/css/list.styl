$color-gray3 = #333
$color-gray6 = #666
$color-gray9 = #999
$color-graye = #eee
$color-grayc = #ccc
$color-white = #fff
$color-orange = orange

.comment-list
  padding: 0
  list-style: none
  margin: 0 10px
  .comment-item
    color: $color-gray9
    margin-bottom: 10px
    padding: 15px
    background-color: $color-white
    box-sizing: border-box
    position: relative
    &.new-item
      background-color: #FAFFE7
    .content
      position: relative
      margin-bottom: 5px
      line-height: 1.7
      letter-spacing: 0.5px
    .user-submit
      position: relative
      width: 100%
      margin-top: 15px
      font-size: 12px
      color: $color-grayc
      .rate
        max-width: 80%
        float: left
        text-align: left
        .rate-star
          position: relative
          display: inline-block
        .tags
          position: relative
          display: inline-block
          margin-left: 10px
          .tag
            position: relative
            width: 15px
            height: 15px
            padding: 0 1px
            color: $color-white
            background-color: $color-orange
            text-align: center
            vertical-align: middle
        .rsts
          list-style: none
          padding: 0
          .rst
            display: inline
            span
              padding-right: 5px
      .reveal
        max-width: 20%
        float: right
        text-align: right
        line-height: 30px
        .avatar
          width: 30px
          height: 30px
          border-radius: 50%
          vertical-align: middle
        padding: 2px
        box-sizing: content-box
        font-size: 12px
